package home

import ("facebookhtmx/views/layouts"
  )


type contextKey string

const HtmxRequestKey contextKey = "HX-Request"
templ Index() {
	if ctx.Value(HtmxRequestKey) == "true" {
		@partial()
	} else {
		@layouts.Base("home") {
      @partial()
		}
	}
}

templ partial() {
	<div id="content" hx-swap-oob="true" class="flex items-start justify-center h-full bg-gray-50">
		<div class="text-xl border border-red-400 text-blue-500 font-bold ">
			Home Page!
		</div>
	</div>
}
